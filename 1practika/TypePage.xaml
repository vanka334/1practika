<Page x:Class="_1practika.TypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1practika"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TypePage">

    <StackPanel>
        <DataGrid x:Name="Typivi"/>
        <TextBlock Text="Введите тип" HorizontalAlignment="Center"/>
        <TextBox x:Name="Type_name" HorizontalAlignment="Center" MinWidth="50"/>
        <Button x:Name="Select_Type" Content ="Добавить" Click="Select_Type_Click" HorizontalAlignment="Center"/>
        <Button x:Name="Delete_Brigade" Content="Удалить" Click="Delete_Brigade_Click" HorizontalAlignment="Center" MinWidth="50" Margin="0,10,0,0"/>

    </StackPanel>
</Page>
