<Page x:Class="_1practika.ObjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1practika"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ObjectPage">

    <StackPanel>
        <DataGrid x:Name="Objectivi" SelectionChanged="Objectivi_SelectionChanged"/>
        <TextBlock  Text="Введите id(Type)" HorizontalAlignment="Center"/>
        <ComboBox x:Name="Object_type" HorizontalAlignment="Center" />
        <TextBlock  Text="Введите id(Brigade)" HorizontalAlignment="Center"/>
        <ComboBox x:Name="Object_Brigade" HorizontalAlignment="Center" />
        <Button x:Name="Select_Object" Content="Добавить" Click="Select_Object_Click" HorizontalAlignment="Center"/>
        <Button x:Name="Delete_Object" Content="Удалить" Click="Delete_Object_Click" HorizontalAlignment="Center" MinWidth="50" Margin="0,10,0,0"/>
        <Button x:Name="Update_Object" Content="Изменить" Click="Update_Object_Click" HorizontalAlignment="Center" MinWidth="50" Margin="0,10,0,0"/>
    </StackPanel>
</Page>
