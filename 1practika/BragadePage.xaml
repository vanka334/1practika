<Page x:Class="_1practika.BragadePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1practika"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BragadePage">

    <StackPanel>
        <DataGrid x:Name="MayaBrigada" SelectionChanged="MayaBrigada_SelectionChanged"/>
        <TextBlock Text="Введите имя бригады" HorizontalAlignment="Center" MinWidth="50"/>
        <TextBox x:Name="Brigade_Name" HorizontalAlignment="Center" MinWidth="50"/>
        <Button x:Name="Select_Brigade" Content="Добавить" Click="Select_Brigade_Click" HorizontalAlignment="Center" MinWidth="50" Margin="0,10,0,0"/>
        <Button x:Name="Delete_Brigade" Content="Удалить" Click="Delete_Brigade_Click" HorizontalAlignment="Center" MinWidth="50" Margin="0,10,0,0"/>
        <Button x:Name="Update_Brigadas" Content="Изменение" Click="Update_Brigadas_Click" HorizontalAlignment="Center" MinWidth="50" Margin="0,10,0,0"/>
    </StackPanel>
</Page>
